<% include ../partials/header %>
<h1 style="text-align:center">Add Castles here</h1>
<div class="container">
<form action="/castles" method="POST">
  <div class="form-group">
    <label for="inp1">Castle</label>
    <input type="text" class="form-control" name="name" id="inp1" placeholder="Enter name of the castle">
  </div>
  <div class="form-group">
    <label for="inp2">Image</label>
    <input type="text" class="form-control" name="image" id="inp2" placeholder="Enter image url">
  </div>
   <div class="form-group">
    <label for="inpz">Price</label>
    <input type="text" class="form-control" name="price" id="inpz" placeholder="Enter price" min="0.01" step="0.01">
  </div>
  <div class="form-group">
    <label for="inp3">Description</label>
    <input type="text" class="form-control" name="description" id="inp3" placeholder="Enter Description">
  </div>
  <div style="text-align:center">
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
</div>

<% include ../partials/footer %>
