<% include ../partials/header %>
<h1 style="text-align:center">Add Castles here</h1>
<div class="container">
<form action="/castles/<%= castle._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="inp1">Castle</label>
    <input type="text" class="form-control" name="castle[name]" id="inp1" value="<%=castle.name%>">
  </div>
  <div class="form-group">
    <label for="inp2">Image</label>
    <input type="text" class="form-control" name="castle[image]" id="inp2" value="<%=castle.image%>">
  </div>
  <div class="form-group">
    <label for="inpz">Price</label>
    <input type="text" class="form-control" name="castle[price]" id="inpz" min="0.01" step="0.01" value="<%=castle.price%>">
  </div>
  <div class="form-group">
    <label for="inp3">Description</label>
    <input type="text" class="form-control" name="castle[description]" id="inp3" value="<%= castle.description%>">
  </div>
  <div style="text-align:center">
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
</div>

<% include ../partials/footer %>
